<div class="col-xs-6 col-xs-offset-3" id="post-form">

<%= form_for @post do |f| %>

  <div class="form-group">
    <%= f.label :title %><br>
    <%= f.text_field :title, class: "form-control", placeholder: "Title" %>
  </div>

  <div class="form-group">
    <%= f.label :body %><br>
    <%= f.text_area :body, class: "form-control", rows: "5" %>
  </div>

  <%= f.submit "Post", class: "btn btn-primary" %>

<% end %>

</div>
