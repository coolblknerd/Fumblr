<div id="comment-content">
  <p id="comment-name"><em><%= comment.name %></em></p><p><%= link_to "Delete", [comment.post, comment], method: :delete, class: "btn btn-danger btn-lg pull-right", data: { confirm: "Are you sure"} %></p>

  <p id="comment-body"><%= comment.body %></p>
  <p id="comment-time"><%= time_ago_in_words(comment.created_at) %></p>
</div>
