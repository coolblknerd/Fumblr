<%= form_for([@post, @post.comments.build]) do |f| %>

  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: "form-control", placeholder: "Name" %>
  </div>

  <div class="form-group">
    <%= f.label :body %><br>
    <%= f.text_area :body, class: "form-control", rows: "5" %>
  </div>

  <%= f.submit "Post", class: "btn btn-primary" %>

<% end %>
